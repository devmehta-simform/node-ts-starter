{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"lib": ["es2022"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"experimentalDecorators": true
	},
	"include": ["src"], // which files to compile
	"exclude": ["node_modules"] // which files to skip
}
